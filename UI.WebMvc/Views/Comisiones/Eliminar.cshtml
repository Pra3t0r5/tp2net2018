@model UI.WebMvc.Models.ComisionesModel

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>Esta seguro de querer eliminar la comision?</h3>
<div>
    <h4>Datos de comision</h4>
    <h4>@if (Model.Error != string.Empty) { @Model.Error}</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AnioEspecialidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnioEspecialidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DescripcionPlan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionPlan)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Volver a comisiones", "Index")
        </div>
    }
</div>
