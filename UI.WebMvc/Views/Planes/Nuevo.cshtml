@model UI.WebMvc.Models.Plan
@using UI.WebMvc.Helpers


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container py-3">
        <div class="row">
            <div class="mx-auto col-sm-8">
                <!-- form user info -->
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Nuevo Plan</h4>
                    </div>
                    <div class="card-body">
                        @TextoHelper.TextoConLabel(nameof(Model.Descripcion), "Descripcion", "text")
                        @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        @ListaHelper.ListaElementos(Model.Especialidades, "IDEspecialidad", "Especialidades")
                        @BtnAceptarCancelarHelper.BotonesAceptarCancelar()
                    </div>
                </div>
                <!-- /form user info -->
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver hacia atras", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
