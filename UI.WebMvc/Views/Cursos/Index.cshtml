@model IEnumerable<UI.WebMvc.Models.CursoModel>

@{
    ViewBag.Title = "Index";
 
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Nuevo")
</p>
<p>
    @Html.ActionLink("Generar Reportes", "ReporteCursos") |
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AnioCalendario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDMateria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDComision)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionMateria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescripcionComision)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnioCalendario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDComision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionComision)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.ID })
            </td>
        </tr>
    }

</table>
