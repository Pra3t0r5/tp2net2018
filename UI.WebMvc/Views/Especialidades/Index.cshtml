@model IEnumerable<UI.WebMvc.Models.Especialidad>

@{
                ViewBag.Title = "Index";
}

@Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>

<div class="container py-3">
    <div class="row">
        <div class="mx-auto col-sm-12">
            <!-- form user info -->
            <div class="card">
                <div class="card-header">
                    <p>
                        @Html.ActionLink("Nueva especialidad", "Nuevo", null, new { @class = "btn btn-success" })
                    </p>
                </div>
                <div class="card-body">
                    <table id="table" class="table table-striped table-dark " style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descripcion)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Editar", "Editar", new { id = item.ID }) |
                                        @Html.ActionLink("Borrar", "Borrar", new { id = item.ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /form user info -->
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "search": "Buscar",
                    "lengthMenu": "Mostrando _MENU_ registros",
                    "info": "Mostrando _START_ a _END_ of _TOTAL_ registros"
                }
            })
        });
    </script>
}


