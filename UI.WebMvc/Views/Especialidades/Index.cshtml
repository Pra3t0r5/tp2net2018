@model IEnumerable<UI.WebMvc.Models.Especialidad>

@{
                /**/

                /**/

                ViewBag.Title = "Index";
              
}

<h2>Especialidades</h2>

<p>
    @Html.ActionLink("Nueva especialidad", "Nuevo", null, new { @class = "btn btn-success" })
</p>
<table id="table" class="table table-striped table-dark " style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.ID }) |
                    @Html.ActionLink("Borrar", "Borrar", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>


</table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                "language": {
                    "search": "Buscar"
                }
            })
        });
    </script>
}


