@model IEnumerable<UI.WebMvc.Models.PersonaModel>

@{
    ViewBag.Title = "Personas";
}

<h2>Profesores</h2>

<p>
    @Html.ActionLink("Nuevo profesor", "Nuevo", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-dark">
    <tr>
        <th>
            Nombre
        </th>
        <th>
           Apellido
        </th>
        <th>
            Dirección
        </th>
        <th>
            E-Mail
        </th>
        <th>
            Fecha de Nacimiento
        </th>
        <th>
            Legajo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoPersona)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            Plan
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaNacimiento.Date.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Legajo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoPersona)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DescripcionPlan)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ID }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.ID })
        </td>
    </tr>
}

</table>
